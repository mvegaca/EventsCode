<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:DotNetSpainConference.Layouts.Controls">
    <DataTemplate x:Key="SectionListTitleTemplate">
        <controls:SectionListItemHeader Title="{Binding Title}" Margin="12,0,0,0"/>
    </DataTemplate>
    <DataTemplate x:Key="SectionListLoadingTemplate">
        <ProgressBar Height="3" IsIndeterminate="True" Foreground="{StaticResource PageTitleForeground}"/>
    </DataTemplate>
    <Style TargetType="HyperlinkButton" BasedOn="{StaticResource HyperlinkStyle}" x:Key="SectionListHeaderLinkStyle">
        <Setter Property="Margin" Value="0,23,22,8"/>
    </Style>
</ResourceDictionary>
