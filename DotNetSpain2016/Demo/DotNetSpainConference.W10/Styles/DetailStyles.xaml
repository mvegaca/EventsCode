<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:was_controls="using:AppStudio.Uwp.Controls">

    <DataTemplate x:Key="HtmlViewerHeaderTemplate">
        <StackPanel Margin="24,0,24,12">
            <TextBlock Text="{Binding Title}" Style="{StaticResource PageTitleStyle}" FontSize="{StaticResource TitleTextSizeDefault}" TextWrapping="Wrap"/>
            <Viewbox StretchDirection="DownOnly" Stretch="Uniform" Margin="0,12,0,0" MaxHeight="600" HorizontalAlignment="Left">
                <Image Source="{Binding ImageUrl}"/>
            </Viewbox>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="IndicatorItemTemplate">
        <Border Width="12" Height="8" BorderBrush="{StaticResource BoxBackground}" BorderThickness="1" />
    </DataTemplate>
</ResourceDictionary>
